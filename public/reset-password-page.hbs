{{# partial "pageTitle" }}{{ pageTitle }}{{/ partial }}


{{# partial "content" }}
  <h1 class="reset-password__heading">{{ titleText }}</h1>
  <p class="reset-password__subtitle">{{ subtitleText }}</p>

  <form id="reset-password-form" class="reset-password-form" method="POST">

    <fieldset class="reset-password-form__fieldset">

      {{#each errors}}
          <p id="{{id}}" class="reset-password-form__error">{{message}}</p>
      {{/each}}

      <div class="reset-password-form__control--email">
        <label class="reset-password-form__label--email" for="reset-password_field_email">{{emailAddressFieldText}}</label>
        <input class="reset-password-form__field--email" id="reset-password_field_email" type="email" name="email" autocomplete="on" autocapitalize="off" autocorrect="off" spellcheck="false" value="{{email}}"/>
      </div>

      <div class="reset-password-form__control--submit">
        <button class="reset-password-form__submit-button" id="reset-password_submit" type="submit">{{buttonText}}</button>
      </div>

    </fieldset>
  </form>

  <h3 class="reset-password__secondary_heading">{{ socialNetworksTitleText }}<h3>
  <p class="reset-password__text">{{ socialNetworksContentText }}<p>
  <h3 class="reset-password__secondary_heading">{{ userHelpTitleText }}</h3>
  <p class="reset-password__text"><a href="mailto:{{ userHelpEmailAddress }}">{{ userHelpEmailText }}</a> {{ userHelpContentText }}</p>
{{/partial}}

{{> layout}}
